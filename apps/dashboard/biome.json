{
	"$schema": "../../node_modules/@biomejs/biome/configuration_schema.json",
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"extends": "//",
	"files": {
		"includes": [
			"!!**/.next"
		]
	},
	"linter": {
		"domains": {
			"next": "all",
			"react": "all"
		},
		"rules": {
			"correctness": {
				"useImportExtensions": {
					"level": "error",
					"options": {
						"forceJsExtensions": false
					}
				}
			},
			"nursery": {
				"useSortedClasses": {
					"fix": "safe",
					"level": "error",
					"options": {
						"functions": [
							"class",
							"className",
							"twMerge"
						]
					}
				}
			},
			"style": {
				"noImplicitBoolean": "error"
			},
			"suspicious": {
				"noUnknownAtRules": "off"
			}
		}
	}
}
