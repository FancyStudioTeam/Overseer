{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"assist": {
		"actions": {
			"recommended": true,
			"source": {
				"organizeImports": "on",
				"useSortedAttributes": "on",
				"useSortedKeys": "on",
				"useSortedProperties": "on"
			}
		},
		"enabled": true
	},
	"files": {
		"includes": [
			"**",
			"!!**/.turbo",
			"!!**/dist"
		]
	},
	"formatter": {
		"attributePosition": "multiline",
		"enabled": true,
		"expand": "always",
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineEnding": "lf",
		"lineWidth": 140
	},
	"linter": {
		"domains": {
			"project": "all",
			"test": "all",
			"turborepo": "all"
		},
		"enabled": true,
		"rules": {
			"complexity": {
				"noImplicitCoercions": "error",
				"noStaticOnlyClass": "error",
				"useSimplifiedLogicExpression": "error"
			},
			"correctness": {
				"noNodejsModules": "off",
				"noUndeclaredDependencies": {
					"level": "error",
					"options": {
						"devDependencies": true,
						"optionalDependencies": true
					}
				},
				"noUnusedImports": "error",
				"noUnusedVariables": "error",
				"useImportExtensions": {
					"level": "error",
					"options": {
						"forceJsExtensions": true
					}
				}
			},
			"nursery": {
				"noUnresolvedImports": "off"
			},
			"performance": {
				"noBarrelFile": "error",
				"noReExportAll": "error"
			},
			"recommended": true,
			"style": {
				"noDefaultExport": "off",
				"noMagicNumbers": "error",
				"useImportType": "error",
				"useNamingConvention": {
					"level": "error",
					"options": {
						"conventions": [
							{
								"formats": [
									"camelCase",
									"snake_case"
								],
								"selector": {
									"kind": "typeProperty"
								}
							},
							{
								"formats": [
									"camelCase",
									"snake_case"
								],
								"selector": {
									"kind": "objectLiteralProperty"
								}
							}
						],
						"strictCase": true
					}
				},
				"useNodejsImportProtocol": "error",
				"useReadonlyClassProperties": {
					"level": "error",
					"options": {
						"checkAllProperties": true
					}
				},
				"useUnifiedTypeSignatures": "error"
			},
			"suspicious": {
				"noUnassignedVariables": "error",
				"useAwait": "error"
			}
		}
	},
	"root": true
}
