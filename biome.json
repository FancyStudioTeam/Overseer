{
	"files": {
		"ignore": ["dist"]
	},
	"formatter": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"nursery": {
				"useImportType": "warn",
				"useGroupedTypeImport": "warn",
				"useExportType": "warn",
				"useNodejsImportProtocol": "warn"
			}
		}
	},
	"json": {
		"formatter": {
			"enabled": false
		}
	}
}
